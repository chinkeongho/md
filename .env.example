AUTH_USER=change_me
AUTH_PASS=change_me
SESSION_SECRET=use_a_long_random_string
PORT=3008
# If reverse-proxied (e.g., nginx on 3009) leave this as the internal app port.
# Optional: override the vault directory (defaults to ./zett)
# VAULT_ROOT=/path/to/zett
# Optional: override settings file path
# SETTINGS_PATH=/path/to/.vault_settings.json
# Optional: override default daily template
# DAILY_TEMPLATE=Daily/YYYY-MM-DD DAILY.md
# Optional: override weekly template
# WEEKLY_TEMPLATE=Weekly notes/YYYY-{W}WW.md

# Deployment helper defaults (used when running deployment/deploy.sh; can also be passed as env vars)
# TARGET_HOST=your.server.com
# TARGET_USER=youruser
# REMOTE_PATH=/home/cow/repos/md
# SERVICE_NAME=md-web
